class Solution {
  public:
      int romanToDecimal(string &str) {
        map<char,int>mpp;
        mpp['I']=1;
        mpp['V']=5;mpp['X']=10;mpp['L']=50;mpp['C']=100;mpp['D']=500;mpp['M']=1000;
       int n=str.size();
        int sum=mpp[str[n-1]];
        for(int i=n-2;i>=0;i--){
            
            if(mpp[str[i+1]]<=mpp[str[i]])
            sum=sum+mpp[str[i]];
            else{
                sum=sum-mpp[str[i]];
            }
        }
        return sum;
    }
};
