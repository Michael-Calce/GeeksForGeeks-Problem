class Solution {
  public:
    long long maxDiamonds(int A[], int N, int K) {
        // code here
        priority_queue<int> q;
        long long ans=0;
        for(int i=0; i<N; i++){
            q.push(A[i]);
        }
        // int ans=0;
        for(int i=0; i<K; i++){
            int a=q.top();
            q.pop();
            ans+=a;
            q.push(a/2);
        }
        return ans;
    }
};
