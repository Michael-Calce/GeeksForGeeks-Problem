class Solution{
public:
    int equalPartition(int n, int a[])
    {
        int sum = 0;
        for(int i=0;i<n;i++) sum+=a[i];
        if(sum&1) return 0;
        sum/=2;
        vector<bool> dp(sum+1,0);
        dp[0] = 1;
        for(int j=0;j<n;j++)
            for(int i=sum;i>=a[j];i--)
                dp[i] = (dp[i]|dp[i-a[j]]);
        return dp[sum];
    }
};
