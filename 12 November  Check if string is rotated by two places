class Solution
{
    private: 
    
    public:
    //Function to check if a string can be obtained by rotating
    //another string by exactly 2 places.
    bool isRotated(string str1, string str2)
    {
        if(str1.size() != str2.size()) return false;
        else if(str1.size() <= 2) return false;
        
        
        // Condition for checking whether the string is rotated two positions by left.
        int i = 2, j = 0;
        bool flag = true;
        while(j < str1.size())
        {
            if(str1[i] != str2[j]) flag = false;
            i = (i + 1) % str1.size();
            j++;
        }
        
        if(flag) return true;
        
        
        // Condition for checking whether the string is rotated two positions by right.
        i = str1.size() - 2, j = 0;
        flag = true;
        while(j < str1.size())
        {
            if(str1[i] != str2[j]) flag = false;
            i = (i + 1) % str1.size();
            j++;
        }
        if(flag) return true;
        return false;
    }
};
