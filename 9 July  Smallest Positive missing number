class Solution
{
    public:
    //Function to find the smallest positive number missing from the array.
    int missingNumber(int arr[], int n) 
    { 
        sort(arr,arr+n);
        int i=0;
        int expect=1;
        while(i<n){
            if(arr[i]==expect){
                expect++;
                continue;
            }
            else if(arr[i]>expect){
                return expect;
            }
            i++;
        }
        return expect;
    } 
};
