class Solution{
    //Function to find the leaders in the array.
    public:
    vector<int> leaders(int a[], int n){
        // Code here
        int leader = a[n-1];
        vector<int> result;
        result.push_back(leader);
        for(int i=n-2;i>=0;i--){
            if(a[i]>=leader){
                leader = a[i];
                result.push_back(leader);
            }
        }
        reverse(result.begin(),result.end());
        return result;
    }
};
